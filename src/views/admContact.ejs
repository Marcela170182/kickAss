<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/productsList.css">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/admContact.css">
    
   
</head>
<body>
    <%- include('partials/header2') %>

    <div class="container">
        
        <h1>Contato:</h1>
        <table class="table">
            <thead class="thead">
                <tr class="tr">
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Motivo</th>
                    <th scope="ol">Mensagem</th>
                </tr>
                <% contacts.forEach(contact => { %> 
                    <tr class="tr">
                        <td scope="row"><%=contact.name%></td>
                        <td><%=contact.email%></td>
                        <td><%=contact.reason%></td>
                        <td id="td-btn" colspan="2">
                           <button id="btn"><a href="/msgContact/<%= contact.id_contact %>">Visualizar</a> </button>
                        </td>
                    </tr>
                    <% }) %>  
                

            </thead>

        </table>
    </div>
</body>
</html>