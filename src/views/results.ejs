<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/games.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>KickAss</title>
</head>

<body>
    <%- include('partials/header') %>
    <main>
      <section>
        <img id="bannerg" src="../img/menu_fifa23.png" alt="banner como o jogo fifa 23">
    </section>
        <div class="productList">
          <h3> Resultados da sua busca : <%= search %> </h3>
          <% if (products.length > 0){ %>
            <% products.forEach(function (product){ %>
              <div class="product">
                <img class="game-img" src="/img/<%= product.img %> " alt="null">
                <br>
                <%= product.title %> <br> 
                <%= product.price %><br>
                <a class="game-options3" href="">Comprar</a>
              </div>
            <% }) %>
          <% } else { %>
            <p id="pe">Produto n√£o encontrado!</p>
          <% } %>
        </div>
      </main>
        <%- include('partials/footer') %>
        <script src="gamesControllers.js"></script>
        
</body>

</html>