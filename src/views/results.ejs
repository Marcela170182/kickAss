<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/games.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>KickAss</title>
</head>

<body>
    <%- include('partials/header') %>
    <main>
      <section>
        <img id="bannerg" src="../img/menu_fifa23.png" alt="banner como o jogo fifa 23">
    </section>
        <div class="productList">
          <h3> Resultados da sua busca : <%= search %> </h3>
          <% if (products.length > 0){ %>
            <% products.forEach(function (product){ %>
              <div class="product">
                <img class="game-img" src="/img/<%= product.img %> " alt="null">
                <br>
               <p class="pd"> <%= product.title %></p>
               <p class="pd"> <%= product.price %></p><br>
               <form id="form" action="/Cart" method="POST">
                <input type="hidden" name="id_games" value="<%= product.id_games %>">
                <input type="hidden" name="title" value="<%= product.title %>">
                <input type="hidden" name="price" value="<%= product.price %>">
                <input type="hidden" name="img" value="<%= product.img %>">
                <input type="hidden" name="quantity" value="1">
                <input class="button" type="submit" value="Adicionar ao Carrinho">
              
              </form>
              </div>
            <% }) %>
          <% } else { %>
            <p id="pe">Produto n√£o encontrado!</p>
          <% } %>
        </div>
      </main>
        <%- include('partials/footer') %>
        <script src="gamesControllers.js"></script>
        
</body>

</html>