<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/games.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>KickAss</title>
</head>

<body>
    <%- include('partials/header') %>
    <main>
        <div class="banner">
          <img class="banner- picture" src="../img/menu_fifa23.png" alt="Logo fifa 23">
        </div>
        <div class="productList">
          <h3> Resultados da sua busca : <%= search %> </h3>
          <% if (products.length > 0){ %>
            <% products.forEach(function (product){ %>
              <div class="product">
                <img class="game-img" src="/img/<%= product.img %> " alt="null">
                <br>
                <%= product.title %> <br> 
                <%= product.price %><br>
                <form id="form" action="/Cart" method="POST">
                    <input type="hidden" name="id_games" value="<%= product.id_games %>">
                    <input type="hidden" name="title" value="<%= product.title %>">
                    <input type="hidden" name="price" value="<%= product.price %>">
                    <input type="hidden" name="img" value="<%= product.img %>">
                    <input type="hidden" name="quantity" value="1">
                    <input type="submit" value="Adicionar ao Carrinho">        
                  </form>
              </div>
            <% }) %>
          <% } else { %>
            <p>Produto NÃ£o encontrado!</p>
          <% } %>
        </div>
      </main>
        <%- include('partials/footer') %>
        <script src="gamesControllers.js"></script>
        
</body>

</html>